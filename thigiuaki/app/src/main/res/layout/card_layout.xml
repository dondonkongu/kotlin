<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    app:cardBackgroundColor="#8fc8f6"
    app:cardCornerRadius="12dp"
    app:contentPadding="4dp"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="SDT"
            android:textColor="@color/black"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text2" />

        <EditText
            android:id="@+id/etext1"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:background="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/text1" />

        <EditText
            android:id="@+id/etext2"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/text2"
            app:layout_constraintTop_toBottomOf="@id/etext1" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/text3"
            app:layout_constraintTop_toBottomOf="@id/etext2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="250dp"
        android:text="Login"


</androidx.cardview.widget.CardView>